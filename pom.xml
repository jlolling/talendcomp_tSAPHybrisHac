<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.jlo.talendcomp.hac</groupId>
	<artifactId>jlo-talendcomp-hac</artifactId>
	<version>4.1</version>
	<name>Hybris Admin Console Interface</name>

	<dependencies>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.18.12</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sap.hybris.hac</groupId>
			<artifactId>jhac-core</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.0</version>
				<configuration>
					<archive>
						<addMavenDescriptor>false</addMavenDescriptor>
						<manifestEntries>
							<Implementation-Title>cimt-talendcomp-camunda-dmn</Implementation-Title>
							<Implementation-Version>${project.version}</Implementation-Version>
							<Implementation-Vendor>Jan Lolling</Implementation-Vendor>
							<Implementation-Timestamp>${maven.build.timestamp}</Implementation-Timestamp>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>de.cimt.talendcomp</groupId>
				<artifactId>cimt-talendcomp-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<copyFromSourceBaseDir>${project.basedir}/talend_component</copyFromSourceBaseDir>
					<componentBaseDir>${project.basedir}/talend_component</componentBaseDir>
					<studioUserComponentFolder>${custom_component_folder}</studioUserComponentFolder>
				</configuration>
				<executions>
					<execution>
						<id>tSAPHybrisHacFlexibleSearch</id>
						<goals>
							<goal>component</goal>
						</goals>
						<configuration>
							<componentName>tSAPHybrisHacFlexibleSearch</componentName>
						</configuration>
					</execution>
					<execution>
						<id>tSAPHybrisHacImpexImport</id>
						<goals>
							<goal>component</goal>
						</goals>
						<configuration>
							<componentName>tSAPHybrisHacImpexImport</componentName>
						</configuration>
					</execution>
					<execution>
						<id>tSAPHybrisHacImpexExport</id>
						<goals>
							<goal>component</goal>
						</goals>
						<configuration>
							<componentName>tSAPHybrisHacImpexExport</componentName>
						</configuration>
					</execution>
					<execution>
						<id>tSAPHybrisHacImpexImportErrors</id>
						<goals>
							<goal>component</goal>
						</goals>
						<configuration>
							<componentName>tSAPHybrisHacImpexImportErrors</componentName>
							<noJars>true</noJars>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>